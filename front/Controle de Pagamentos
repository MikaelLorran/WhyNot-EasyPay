    <script>
        const searchInput = document.getElementById('searchBoleto');
        const statusFilter = document.getElementById('statusFilter');
        const tableBody = document.getElementById('tableBody');

        searchInput.addEventListener('input', filterTable);
        statusFilter.addEventListener('change', filterTable);

        function filterTable() {
            const searchValue = searchInput.value.toLowerCase();
            const statusValue = statusFilter.value.toLowerCase();
            const rows = tableBody.getElementsByTagName('tr');

            for (let row of rows) {
                const name = row.cells[0].textContent.toLowerCase();
                const cpf = row.cells[1].textContent.toLowerCase();
                const statusBadge = row.querySelector('.status-badge');
                const status = statusBadge.classList.contains('status-pendente') ? 'pendentes' :
                              statusBadge.classList.contains('status-atraso') ? 'atrasados' : 'pagos';

                const matchesSearch = name.includes(searchValue) || cpf.includes(searchValue);
                const matchesStatus = statusValue === 'todos' || status === statusValue;

                row.style.display = matchesSearch && matchesStatus ? '' : 'none';
            }
        }

        function editPayment(name) {
            alert('Editando pagamento de: ' + name);
        }

        function deletePayment(name) {
            if (confirm('Deseja realmente excluir o pagamento de ' + name + '?')) {
                alert('Pagamento exclu√≠do!');
            }
        }

        function confirmPayment(name) {
            if (confirm('Confirmar pagamento de ' + name + '?')) {
                alert('Pagamento confirmado!');
            }
        }

        function goBack() {
            alert('Voltando √† p√°gina anterior...');
        }
    </script>
